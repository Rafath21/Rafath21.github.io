    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const houseCupCtx = document.getElementById('houseCupChart').getContext('2d');
            const houseCupChart = new Chart(houseCupCtx, {
                type: 'bar',
                data: {
                    labels: ['1991', '1992', '1993'],
                    datasets: [
                        { label: 'Gryffindor', data: [312, 462, 470], backgroundColor: '#740001' },
                        { label: 'Hufflepuff', data: [352, 355, 358], backgroundColor: '#EEBA30' },
                        { label: 'Ravenclaw', data: [426, 428, 430], backgroundColor: '#222F5B' },
                        { label: 'Slytherin', data: [472, 468, 470], backgroundColor: '#1A472A' },
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: true, grace: '5%' } },
                    plugins: { legend: { position: 'top' } }
                }
            });

            const demographicsCtx = document.getElementById('demographicsChart').getContext('2d');
            const demographicsChart = new Chart(demographicsCtx, {
                type: 'line',
                data: {
                    labels: ['1970', '1975', '1980', '1985', '1990', '1995', '2000'],
                    datasets: [
                        { label: 'Pure-blood', data: [60, 55, 48, 42, 35, 30, 25], borderColor: '#1A472A', tension: 0.1, fill: false },
                        { label: 'Half-blood', data: [25, 30, 37, 43, 50, 55, 60], borderColor: '#740001', tension: 0.1, fill: false },
                        { label: 'Muggle-born', data: [15, 15, 15, 15, 15, 15, 15], borderColor: '#EEBA30', tension: 0.1, fill: false }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: true, max: 70, ticks: { callback: value => value + '%' } } },
                    plugins: { legend: { position: 'top' }, tooltip: { callbacks: { label: context => context.dataset.label + ': ' + context.parsed.y + '%' } } }
                }
            });

            const ministryCtx = document.getElementById('ministryChart').getContext('2d');
            const ministryChart = new Chart(ministryCtx, {
                type: 'pie',
                data: {
                    labels: ['Magical Law Enforcement', 'Magical Accidents', 'International Cooperation', 'Regulation of Creatures', 'Mysteries', 'Other'],
                    datasets: [{
                        data: [45, 20, 15, 10, 5, 5],
                        backgroundColor: ['#740001', '#1A472A', '#222F5B', '#EEBA30', '#5D5D5D', '#AEAEAE']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top' },
                        tooltip: { callbacks: { label: context => context.label + ': ' + context.parsed + '%' } }
                    }
                }
            });

            // Tab functionality
            const tabButtons = document.querySelectorAll('.tab-btn');
            const tabPanes = document.querySelectorAll('.tab-pane');

            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    tabButtons.forEach(btn => btn.classList.remove('tab-active'));
                    button.classList.add('tab-active');

                    tabPanes.forEach(pane => {
                        if (pane.id === button.dataset.tab) {
                            pane.classList.remove('hidden');
                        } else {
                            pane.classList.add('hidden');
                        }
                    });
                });
            });
        });
    </script>
